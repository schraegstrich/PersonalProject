<Page x:Class="Client_FrontEnd.ManageRecipiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_FrontEnd"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageRecipiesPage">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="143,-1,0,377" Width="268">
            <TextBlock x:Name="welcomeMessage" Text="Manage your recipies" HorizontalAlignment="Center" Margin="30" FontSize="20"/>
        </StackPanel>
        <DataGrid x:Name="recipesData" Margin="10,145,14,10" SelectionChanged="recipesData_SelectionChanged"/>
        <Button Content="Add recipe" Margin="641,59,77,355" Click="Button_Click"/>
    </Grid>
</Page>
