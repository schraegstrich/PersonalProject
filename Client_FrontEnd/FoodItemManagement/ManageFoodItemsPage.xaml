<Page x:Class="Client_FrontEnd.ManageFoodItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_FrontEnd"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageFoodItemsPage">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="204,-8,0,369" Width="292">
            <TextBlock x:Name="welcomeMessage" Text="Manage your food items" HorizontalAlignment="Center" Margin="30" FontSize="20" Width="217"/>
        </StackPanel>
        <DataGrid x:Name="foodData" Margin="10,145,14,10" SelectionChanged="foodData_SelectionChanged"/>
        <Button Content="Add food item" Background="#FF2F800B"  Click="Button_Click" Width="150" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,88,65,0"/>
    </Grid>
</Page>
