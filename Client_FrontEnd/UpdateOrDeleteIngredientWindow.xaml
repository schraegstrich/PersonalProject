<Window x:Class="Client_FrontEnd.UpdateOrDeleteIngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_FrontEnd"
        mc:Ignorable="d"
        Title="UpdateOrDeleteIngredientWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition  Height="80"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,81,0,0">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label x:Name="lName" Content="Name : " />
                <TextBox x:Name="tName" Width="200" Margin="2"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label  Content="Quantity in grams or ml : " />
                <TextBox x:Name="tQuantityGrams" Width="200" Margin="2"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="Quantity in units : " />
                <TextBox x:Name="tQuantityUnits" Width="200" Margin="2" />
            </StackPanel>


        </StackPanel>


        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="updateButton" Content="Update ingredient"  Background="#FF2F800B" Width="100" Margin="20,0,50,0" Click="updateButton_Click"/>
            <Button x:Name="deleteButton" Content="Delete ingredient"  Background="#FFFF1004" Margin="50,0,20,0" Width="100" Click="deleteButton_Click" Height="36"/>
        </StackPanel>
    </Grid>
</Window>
