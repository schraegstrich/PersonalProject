<Page x:Class="Client_FrontEnd.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_FrontEnd"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="580"
      Title="WelcomePage">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="143,-1,0,201">
            <TextBlock x:Name="welcomeMessage" Text="What do you want to cook?" HorizontalAlignment="Center" Margin="30" FontSize="20"/>
        </StackPanel>
        <DataGrid x:Name="recipesData" Margin="10,145,14,10" SelectionChanged="recipesData_SelectionChanged"/>
    </Grid>
</Page>
